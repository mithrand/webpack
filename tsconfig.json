{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "CommonJS",
    "moduleResolution":"node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "checkJs":true,
    "sourceMap": true,
    "alwaysStrict":true,
    "baseUrl": ".",
    "paths": {
      "images/*": ["src/statics/images/*"],
      "styles/*": ["src/statics/styles/*"],
      "components/*": ["src/components/*"],
      "globals/*": ["src/globals/*"],
      "fonts/*": ["fonts/*"],
      "api": ["src/api"],
      "dispatchers": ["src/redux/dispatchers"],
      "state": ["src/redux/store/state"],
    }
  },
  "exclude": [
    "node_module", 
    "./dist",
    "./server", 
    "global.d.ts",
    "webpack.common.js",
    "webpack.dev.js",
    "webpack.prod.js",
    "./src/**/__test__/*.*",
  ]
}